<?xml version="1.0"?>
<DDDefinition xmlns="http://www.cern.ch/cms/DDL" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.cern.ch/cms/DDL ../../DDLSchema/DDLSchema.xsd">
  <SpecParSection label="fields.xml" eval="true">
    <SpecPar name="field-map">
      <PartSelector path="//OCMS"/> 
      <Parameter name="MagneticFieldType" value="CMSIMField" eval="false"/>
      <Parameter name="Stepper" value="G4ClassicalRK4" eval="false"/>
      <Parameter name="MinStep" value="1.e-1*mm"/>
      <Parameter name="DeltaChord" value="1.e-3*mm"/>
      <Parameter name="DeltaOneStep" value="1.e-3*mm"/>
      <Parameter name="DeltaIntersection" value="1.e-4*mm"/>
      <Parameter name="DeltaIntersectionAndOneStep" value="-1."/>
      <Parameter name="MaximumLoopCount" value="1000"/>
      <Parameter name="MinimumEpsilonStep" value="1.e-5*mm"/>
      <Parameter name="MaximumEpsilonStep" value="1.e-2*mm"/>
    </SpecPar>
  </SpecParSection>
</DDDefinition>
